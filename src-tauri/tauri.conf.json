{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ApplyKit",
  "version": "0.1.0",
  "identifier": "com.applykit.desktop",
  "build": {
    "beforeDevCommand": "pnpm -C ../ui dev",
    "beforeBuildCommand": "pnpm -C ../ui build",
    "frontendDist": "../ui/dist",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "title": "ApplyKit",
        "width": 1400,
        "height": 900,
        "resizable": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' ipc: http://ipc.localhost https://ipc.localhost; img-src 'self' asset: data: blob:; style-src 'self' 'unsafe-inline'; script-src 'self'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": []
  }
}
